<html class="sign_up-bg">
<h2>Sign Up</h2>
<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ol>
<% end %>
<div class="sign_input">
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, :requried => true %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign up" %>
<% end %>
</div>
</html>
